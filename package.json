{
  "name": "school-erp-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for School ERP system",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest --config=jest.config.js --runInBand",
    "seed:global": "node src/repositories/seedGlobalAdmin.js"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#lib/*": "./src/lib/*",
    "#middleware/*": "./src/middleware/*",
    "#api/*": "./src/api/*",
    "#services/*": "./src/services/*",
    "#shared/*": "./src/shared/*",
    "#models/*": "./src/models/*",
    "#repositories/*": "./src/repositories/*",
    "#jobs/*": "./src/jobs/*",
    "#templates/*": "./src/templates/*",
    "#docs/*": "./src/docs/*",
    "#routes/*": "./src/routes/*",
    "#server/*": "./src/*"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.0.0",
    "i18next": "^23.15.1",
    "i18next-fs-backend": "^2.3.2",
    "i18next-http-middleware": "^3.6.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "redis": "^4.7.0",
    "serverless-http": "^3.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.3.2",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=20.0.0 <=22.x"
  }
}
